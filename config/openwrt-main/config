CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# 使用自定义内核版本（需源码支持）
CONFIG_KERNEL_PATCHVER="6.16"

# 默认 LAN IP 设置
CONFIG_PACKAGE_default-settings=y
CONFIG_DEFAULT_ipaddr="10.10.10.1"

# 文件系统格式：仅 squashfs（支持 OTA 升级）
CONFIG_TARGET_ROOTFS_SQUASHFS=y
# 不启用 ext4 格式
# CONFIG_TARGET_ROOTFS_EXT4FS is not set

# LuCI Web 管理界面 + 中文支持
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall4-zh-cn=y

# 防火墙体系：firewall4 + nftables
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-nat=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-nft-bridge=y
CONFIG_PACKAGE_libnftnl=y
CONFIG_PACKAGE_libxtables-nft=y
CONFIG_PACKAGE_luci-app-firewall4=y

# 网络核心组件
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_pppoe=y

# 驱动支持：Intel X710 网卡
CONFIG_PACKAGE_kmod-ixgbe=y
CONFIG_PACKAGE_kmod-i40e=y
CONFIG_PACKAGE_kmod-e1000e=y

# SFTP 支持（OpenSSH SFTP Server）
CONFIG_PACKAGE_openssh-sftp-server=y

# 移除 ttyd、htop、irqbalance、USB、ext4 支持
# CONFIG_PACKAGE_luci-app-ttyd is not set
# CONFIG_PACKAGE_htop is not set
# CONFIG_PACKAGE_irqbalance is not set
# CONFIG_PACKAGE_kmod-usb-core is not set
# CONFIG_PACKAGE_kmod-usb2 is not set
# CONFIG_PACKAGE_kmod-usb3 is not set
# CONFIG_PACKAGE_kmod-usb-ohci is not set
# CONFIG_PACKAGE_kmod-usb-storage is not set
# CONFIG_PACKAGE_kmod-fs-ext4 is not set
# CONFIG_PACKAGE_block-mount is not set

# 系统工具（保留必要组件）
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_ethtool=y

# 启动方式支持（推荐开启 EFI/GRUB）
CONFIG_GRUB_IMAGES=y
CONFIG_EFI_IMAGES=y
